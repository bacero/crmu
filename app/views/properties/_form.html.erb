<div class="grid">
		<div class="row space-top space-bot">
			<h2 class="text-center"><%= name %></h2>
		</div>
	<div class="row space-bot" align="center">

	<%= form_for(@p, :html => {:class => 'vform'}) do |f| %>
	<% @p.errors.full_messages.each do |message|%>
		<div class="be-alert white">*<%= message %></div>
	<%end%>
	<fieldset>
	<label>Nombre</label>
	<%= f.text_field:name, placeholder: "Atributo"%>
	</fieldset>
	<fieldset>
		<label>Descripcion</label>
		<%= f.text_area:description, placeholder: "Descripcion"%>
	</fieldset>
	<fieldset>
		<label>Tipo de Atributo</label>
		<%= f.collection_select :kind_property_id, KindProperty.all, :id,:name, {prompt: 'Seleccione Tipo'}%>
	</fieldset>
	<fieldset>
		<label>Estado del Atributo</label>
		<%= f.collection_select :state_id, State.all, :id,:name, {prompt: 'Seleccione Estado'}%>
	</fieldset>

	<div class="field">
		<%= f.submit "Guardar", class:"skyblue" %>
	</div>

	<%end%>
	</div>
</div>
