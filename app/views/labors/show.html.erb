<div class="grid">
	<div class="row space-top space-bot">
			<h2 class="text-center"> <%= @labor.name %></h2>
	</div>
	<div class="g960 space-bot">
		<div class="row space-bot">
			<div class="c3 first" >
				<p class="note text-center" style=" background-color:#EBEAE8;">
					Descripcion
				</p>
			</div>
			<div class="c9 last">
				<p class="note text-left" style="font-size:120%;  padding-left:30px;">
				 <%= @labor.description %>
				</p>
			</div>
			<div class="c3 first" >
				<p class="note text-center" style=" background-color:#EBEAE8;">
					Descripcion Indicador
				</p>
			</div>
			<div class="c9 last">
				<p class="note text-left" style="font-size:120%;  padding-left:30px;">
				<%= @labor.indicator_description %>
				</p>
			</div>
			<div class="c3 first" >
				<p class="note text-center" style=" background-color:#EBEAE8;">
				Indicador
				</p>
			</div>
			<div class="c9 last">
				<p class="note text-left" style="font-size:120%;  padding-left:30px;">
				<%= @labor.indicator %>
				</p>
			</div>
			<div class="c3 first" >
				<p class="note text-center" style=" background-color:#EBEAE8;">
				Inicio
				</p>
			</div>
			<div class="c9 last">
				<p class="note text-left" style="font-size:120%;  padding-left:30px;">
				<%= @labor.initiation %>
				</p>
			</div>
			<div class="c3 first" >
				<p class="note text-center" style=" background-color:#EBEAE8;">
				Fin
				</p>
			</div>
			<div class="c9 last">
				<p class="note text-left" style="font-size:120%;  padding-left:30px;">
				<%= @labor.ending  %>
				</p>
			</div>
		</div>
	</div>
<div class="row space-top space-bot">
	<h4 class="text-center">Observaciones</h4>
</div>

<div class="row space-bot">
			<div class="c12">
				<% @observations.each do |o|  %>		
					<p class="note text-center"><%=o.description %></p>
				<%end%>
			</div>
</div>

<div class="row space-top space-bot">
	<h4 class="text-center">Historial de Cambios</h4>
</div>
	<div class="row space-bot">
	<div class="c12">
		<% @changes.each do |c|  %>
			
			<p class="note text-center"><%=c.created_at.strftime("%m-%d-%Y")%> : Campo <b><%= c.property %></b> Datos Antiguo: <b><%=c.previus %></b> Dato Nuevo: <b><%=c.mint %></b></p>
			
				
		<%end%>
	</div>
	</div>


<p>esto solo lo creara el usuario registrado</p>
<div>
	<%= form_for(@comment) do |f| %>
		<div class="field">
		<%= f.text_area:description, placeholder: "descripcion", class:"form-control"%>
		</div>
		<%= f.hidden_field:labor_id, :value => @labor.id %>
		<%= f.hidden_field:kind, :value => "1" %>
		<div class="field">
			<%= f.submit "Guardar", class:"btn large-padding be-red" %>
		</div>
	<%end%>
</div>
<div class="row space-top space-bot">
	<h4 class="text-center">COMENTARIOS</h4>
</div>
<%= form_for(@comment) do |f| %>
		<div class="field">
		<%= f.text_area:description, placeholder: "descripcion", class:"form-control"%>
		</div>
		<%= f.hidden_field:labor_id, :value => @labor.id %>
		<%= f.hidden_field:kind, :value => "2" %>
		<div class="field">
			<%= f.submit "Guardar", class:"btn large-padding be-red" %>
		</div>
	<%end%>
<div class="row space-bot">
	<div class="c12">
		<% @comnents.each do |o|  %>		
			<p class="note text-center"><%=o.description %></p>
		<%end%>
	</div>
	</div>

	
</div>